# GCS Migration Configuration
# Copy this file to .env and update with your actual values

# Account Configuration
# Source GCP account email (with access to source project)
GCS_SOURCE_ACCOUNT=your-source-account@domain.com

# Destination GCP account email (with access to destination project)
GCS_DEST_ACCOUNT=your-dest-account@domain.com

# Project Configuration
# Source GCP project ID
GCS_SOURCE_PROJECT=source-project-id

# Destination GCP project ID
GCS_DEST_PROJECT=destination-project-id

# Storage Configuration
# Local directory for downloading GCS data (absolute path)
GCS_LOCAL_BACKUP_DIR=/path/to/your/backup/directory

# Destination bucket name in the target project
GCS_ARCHIVE_BUCKET=archive

# Default restore directory for advanced_restore.sh
GCS_RESTORE_DIR=/tmp/gcs_restore

# Regional Configuration
# Default region for new bucket creation (if needed)
# Options: asia-northeast1 (Tokyo), asia-northeast2 (Osaka), us-central1 (Iowa), asia (multi-region)
GCS_DEFAULT_REGION=asia-northeast1

# Performance Configuration
# Threshold for using parallel composite uploads (default: 150M)
GCS_PARALLEL_UPLOAD_THRESHOLD=150M

# Component size for parallel uploads (default: 50M)
GCS_PARALLEL_UPLOAD_COMPONENT_SIZE=50M

# Archive Configuration
# Default compression level (1-9, where 1=fastest, 9=best compression)
GCS_DEFAULT_COMPRESSION_LEVEL=6

# Optional: Progress Display
# Set to 'true' to enable detailed progress bars (requires 'pv' command)
ENABLE_PROGRESS_BARS=false

# Optional: Notification Settings
# Slack webhook URL for completion notifications (leave empty to disable)
SLACK_WEBHOOK_URL=

# Optional: Retention Settings
# Number of days to keep old archives (0 = keep forever)
ARCHIVE_RETENTION_DAYS=0